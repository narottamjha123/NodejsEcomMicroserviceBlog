        //     window.location.href = window.location.href.split('/UpdateRecord')[0] + Url;
        // }
        console.log(window.location.href.split('/UpdateRecord'));
    }
</script>

<body style="background-color : rebeccapurple">
    
    <div class="offer" style="margin: 250px">
        <div class="small container">
            <form class="form"  action= '/UpdateRecord/<%= data.ID %>' method="POST" id="form1">
            <div class="row">
                <div class="col-2">
                    <img src='images/<%= data.Product %>' class="offer-img" style="width:300px">
                </div>
                <div class="col-2 mt-5">
                    <div class="form-group row">
                        <h1 for="Name" class="col-sm-2 col-form-label" style="color : rgb(194, 123, 123)">Product Name
                        </h1>
                        <div class="col-sm-10">
                            <input type="Name" class=" InputStyle fill" id="ProductName" value = '<%= data.Product %>' placeholder="ProductName"
                                name="Product" onKeyup="checkform()">
                        </div>
                    </div>
                    <div class="form-group row">
                        <h1 for="Name" class="col-sm-2 col-form-label" style="color : rgb(63, 48, 131)">Product Cost
                        </h1>
                        <div class="col-sm-10">
                            <input type="Name" class="form-control InputStyle" value = '<%= data.Price %>' id="ProductCost" placeholder="Cost" name="Cost"
                                onKeyup="checkform()">
                        </div>
                    </div>
                    <div class="form-group row">
                        <h1 for="Name" class="col-sm-2 col-form-label" style="color : rgb(161, 201, 116)">Product Value
                        </h1>
                        <div class="col-sm-10">
                            <input type="Name" class="form-control InputStyle" value = '<%= data.Detail %>' style="height :100px" id="ProductValue"
                                placeholder="Description"  name = "Detail" onKeyup="checkform()">
                        </div>
                    </div>
                </div>
            </div>
           <button  class="btn" disabled = "disabled" style="background-color: rgb(178, 182, 179);"  id ="submitbutton">Update</button>
            <button class="btn" style="background-color: rgb(53, 25, 80);"> Back</button>
        </form>
        </div>
    
    </div>
   
</body>

</html>